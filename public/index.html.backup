<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Loading Event...</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="hero">
    <div class="hero-content">
      <h1 id="event-name">Loading...</h1>
      <div class="event-details">
        <p class="event-date" id="event-date">Loading...</p>
        <p class="event-time" id="event-time"></p>
        <p class="event-location" id="event-location"></p>
      </div>
      <p class="event-description" id="event-description">
        Loading event details...
      </p>
      <a href="/purchase" class="buy-tickets-btn" id="buy-tickets-btn">Buy Tickets</a>
    </div>
  </div>
  
  <script>
    async function loadEventDetails() {
      try {
        const response = await fetch('/api/config');
        const data = await response.json();
        
        document.title = data.event.name + ' - Event';
        document.getElementById('event-name').textContent = data.event.name;
        
        const buyBtn = document.getElementById('buy-tickets-btn');
        
        if (data.event.tbdMode) {
          // TBD Mode - Show TBD and disable purchase button
          document.getElementById('event-date').textContent = 'TBD';
          document.getElementById('event-time').textContent = 'Date and time to be announced';
          document.getElementById('event-location').textContent = data.event.address;
          buyBtn.textContent = 'Tickets Not Yet Available';
          buyBtn.style.opacity = '0.5';
          buyBtn.style.cursor = 'not-allowed';
          buyBtn.onclick = (e) => {
            e.preventDefault();
            alert('Ticket sales are not yet available. Please check back soon for event date announcement!');
          };
        } else {
          // Normal mode - Show date/time and enable purchase
          document.getElementById('event-date').textContent = data.event.day + ', ' + data.event.date;
          document.getElementById('event-time').textContent = data.event.time;
          document.getElementById('event-location').textContent = data.event.address;
          buyBtn.textContent = 'Buy Tickets ($' + data.ticketing.price.toFixed(2) + ')';
          buyBtn.style.opacity = '1';
          buyBtn.style.cursor = 'pointer';
          buyBtn.onclick = null;
        }
        
        document.getElementById('event-description').textContent = data.event.description;
      } catch (error) {
        console.error('Error loading event details:', error);
        // Keep loading text if fetch fails
      }
    }
    
    loadEventDetails();
  </script>
</body>
</html>